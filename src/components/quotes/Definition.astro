---
/**
 * Definition: Term definition block for philosophical/theological concepts.
 *
 * Usage:
 *   <Definition term="Hypostasis" origin="griego" pronunciation="hy·pó·sta·sis">
 *     Sustancia o persona individual...
 *   </Definition>
 */
interface Props {
  term: string;
  origin?: string; // e.g. "griego", "latín", "hebreo"
  pronunciation?: string; // e.g. "hy·pó·sta·sis"
  related?: string[]; // Related terms
}
const { term, origin, pronunciation, related } = Astro.props;
---

<div class="my-10 flex gap-6 items-start">
  {/* Left accent */}
  <div class="hidden md:flex flex-col items-center pt-1">
    <div
      class="w-10 h-10 rounded-full bg-secondary/10 flex items-center justify-center"
    >
      <div class="i-ph-book-bookmark text-lg text-secondary"></div>
    </div>
    <div class="w-px flex-1 bg-border-subtle mt-2"></div>
  </div>

  {/* Content */}
  <div class="flex-1">
    <div class="flex flex-wrap items-baseline gap-x-3 gap-y-1 mb-3">
      <h3 class="text-2xl font-display font-black text-primary">{term}</h3>
      {
        pronunciation && (
          <span class="text-sm text-text-muted font-mono">
            /{pronunciation}/
          </span>
        )
      }
      {
        origin && (
          <span class="text-xs px-2 py-0.5 rounded-[var(--radius-pill)] bg-accent/10 text-accent font-mono">
            {origin}
          </span>
        )
      }
    </div>

    <div class="text-base text-text font-serif leading-relaxed [&>p]:mb-3">
      <slot />
    </div>

    {
      related && related.length > 0 && (
        <div class="mt-4 pt-4 border-t border-border-subtle flex flex-wrap gap-2">
          <span class="text-xs text-text-muted font-mono mr-1">
            Ver también:
          </span>
          {related.map((r) => (
            <span class="text-xs px-2 py-0.5 bg-bg-offset rounded-[var(--radius-pill)] text-text-muted hover:text-secondary cursor-pointer transition-colors">
              {r}
            </span>
          ))}
        </div>
      )
    }
  </div>
</div>
