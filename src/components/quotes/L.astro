---
/**
 * L: Left speaker bubble in a Debate.
 * Aligned to the left, chat-style.
 *
 * Usage (inside <Debate>):
 *   <L ts="00:02:30">El argumento cosmol√≥gico demuestra...</L>
 */
interface Props {
  ts?: string; // timestamp e.g. "00:02:30" or "2:30"
}
const { ts } = Astro.props;
---

<div class="flex md:pr-[52%] relative">
  {/* Timeline dot */}
  <div
    class="absolute left-1/2 top-4 w-2.5 h-2.5 rounded-full bg-secondary border-2 border-bg -translate-x-1/2 hidden md:block z-10"
  >
  </div>

  <div class="w-full">
    {
      ts && (
        <span class="text-[10px] font-mono text-text-muted mb-1 block">
          {ts}
        </span>
      )
    }
    <div
      class="bg-secondary/8 border border-secondary/20 rounded-[var(--radius-lg)] rounded-tl-sm px-5 py-4"
    >
      <div class="text-sm font-serif text-primary leading-relaxed">
        <slot />
      </div>
    </div>
  </div>
</div>
