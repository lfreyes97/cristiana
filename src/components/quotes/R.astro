---
/**
 * R: Right speaker bubble in a Debate.
 * Aligned to the right, chat-style.
 *
 * Usage (inside <Debate>):
 *   <R ts="00:08">La ciencia no necesita una causa primera...</R>
 */
interface Props {
  ts?: string;
}
const { ts } = Astro.props;
---

<div class="flex md:pl-[52%] relative">
  {/* Timeline dot */}
  <div
    class="absolute left-1/2 top-4 w-2.5 h-2.5 rounded-full bg-accent border-2 border-bg -translate-x-1/2 hidden md:block z-10"
  >
  </div>

  <div class="w-full">
    {
      ts && (
        <span class="text-[10px] font-mono text-text-muted mb-1 block text-right">
          {ts}
        </span>
      )
    }
    <div
      class="bg-accent/8 border border-accent/20 rounded-[var(--radius-lg)] rounded-tr-sm px-5 py-4"
    >
      <div class="text-sm font-serif text-primary leading-relaxed">
        <slot />
      </div>
    </div>
  </div>
</div>
