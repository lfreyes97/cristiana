---
/**
 * ScriptureBlock: Biblical quote with book/chapter/verse reference.
 * Styled distinctly from regular quotes â€” uses a cross icon and verse formatting.
 *
 * Usage:
 *   <ScriptureBlock ref="Juan 1:1-3" version="RVR1960">
 *     En el principio era el Verbo, y el Verbo era con Dios, y el Verbo era Dios.
 *   </ScriptureBlock>
 */
interface Props {
  ref: string; // e.g. "Juan 1:1-3"
  version?: string; // e.g. "RVR1960", "NVI", "ESV"
}
const { ref, version } = Astro.props;
---

<figure class="my-12 relative">
  <div class="absolute -left-2 top-0 w-1 h-full bg-accent/40 rounded-full">
  </div>
  <div class="pl-8">
    <div class="flex items-center gap-2 mb-3">
      <div class="i-ph-cross text-sm text-accent"></div>
      <span class="text-xs font-bold uppercase tracking-widest text-accent"
        >{ref}</span
      >
      {
        version && (
          <span class="text-[10px] text-text-muted font-mono opacity-60">
            ({version})
          </span>
        )
      }
    </div>
    <blockquote
      class="text-xl md:text-2xl font-serif italic text-primary leading-relaxed"
    >
      <slot />
    </blockquote>
  </div>
</figure>
